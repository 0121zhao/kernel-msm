&spmi_bus {
	qcom,pm8994@0 {
		qcom,power-on@800 {
			interrupts = <0x0 0x8 0x0>,
					<0x0 0x8 0x1>,
					<0x0 0x8 0x3>,
					<0x0 0x8 0x4>,
					<0x0 0x8 0x5>;
			interrupt-names = "kpdpwr", "resin", "kpdpwr-bark",
					"resin-bark", "kpdpwr-resin-bark";
			qcom,s3-debounce = <16>;
			qcom,s3-src = "kpdpwr";
			qcom,pon_1 { /* KPD_PWR_N reset */
				status = "ok";
				qcom,s1-timer = <6720>;
				qcom,s2-timer = <2000>;
				qcom,s2-type = <7>;
				qcom,use-bark;
			};
			qcom,pon_2 { /* RESIN_N reset   */
				status = "ok";
				qcom,support-reset = <0>;
			};
			qcom,pon_3 { /* KPD_PWR_N AND RESIN_N reset */
				status = "ok";
				qcom,support-reset = <0>;
			};
		};
	};

	qcom,pmi8994@2 {
		qcom,power-on@800 {
			qcom,s3-debounce = <16>;
			qcom,s3-src = "kpdpwr";
		};
	};
};

&pmi8994_charger {
	status = "ok";
	qcom,charge-unknown-battery;
	qcom,iterm-ma = <100>;
	qcom,float-voltage-mv = <4400>;
	qcom,resume-delta-mv = <200>;
	qcom,charging-timeout-mins = <768>;
	qcom,chg-vadc = <&pmi8994_vadc>;
};

/{
        bullhead_batterydata: qcom,battery-data {
                #include "lge_blt9_2300mah.dtsi"
        };
};

&pmi8994_fg {
        status = "ok";

        qcom,ext-sense-type;
        qcom,battery-data = <&bullhead_batterydata>;
        qcom,single-profile;
        qcom,sw-rbias-control;
        qcom,fg-iterm-ma = <400>;
        qcom,fg-cutoff-voltage-mv = <3400>;
};

&spmi_bus {
	qcom,pmi8994@3 {
		qcom,leds@d000 {
			qcom,rgb_0 {
				qcom,mode = "lpg";
				qcom,start-idx = <0>;
				qcom,idx-len = <24>;
				qcom,duty-pcts = [
					01 02 03 04 05 06 07 08
					09 0A 0B 0C 0D 0E 0F 10
					11 12 13 14 15 16 17 18];
				linux,default-trigger = "none";
			};

			qcom,rgb_1 {
				qcom,mode = "lpg";
				qcom,start-idx = <0>;
				qcom,idx-len = <24>;
				qcom,duty-pcts = [
					01 02 03 04 05 06 07 08
					09 0A 0B 0C 0D 0E 0F 10
					11 12 13 14 15 16 17 18];
				linux,default-trigger = "none";
			};

			qcom,rgb_2 {
				qcom,mode = "lpg";
				qcom,start-idx = <0>;
				qcom,idx-len = <24>;
				qcom,duty-pcts = [
					01 02 03 04 05 06 07 08
					09 0A 0B 0C 0D 0E 0F 10
					11 12 13 14 15 16 17 18];
				linux,default-trigger = "none";
			};
		};
	};
};
