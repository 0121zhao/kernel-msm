/ {
	memory {
		ramoops_mem: ramoops_region@0ff00000 {
			linux,reserve-contiguous-region;
			linux,reserve-region;
			linux,remove-completely;
			reg = <0x0 0x0ff00000 0x0 0x100000>;
			label = "ramoops_mem";
		};
		crash_fb_mem: crash_fb_mem@0 {
			 linux,reserve-contiguous-region;
			 linux,reserve-region;
			 linux,remove-completely;
			 reg = <0 0x10000000 0 0x0B00000>;
			 label = "crash_fb_mem";
		};
	};
};

&soc {
	ramoops {
		compatible = "ramoops";
		mem-size = <0x80000>;
		mem-address = <0x0ff00000>;
		record-size = <4096>;
		console-size = <0x40000>;
		ftrace-size = <0x40000>;
		dump-oops = <1>;
	};

	qcom,wdt@f9017000 {
		qcom,bark-time = <16000>;
	};

	qcom,msm-thermal {
		compatible = "qcom,msm-thermal";
		qcom,core-limit-temp = <90>;
		qcom,core-control-mask = <0x36>;
		qcom,hotplug-temp = <105>;
		qcom,hotplug-temp-hysteresis = <50>;
		qcom,big-hotplug-temp = <90>;
		qcom,big-hotplug-temp-hysteresis = <40>;
	};

	qcom,bcl {
		qcom,bcl-soc-hotplug-list = <&CPU4 &CPU5>;
		qcom,ibat-monitor {
			qcom,vph-high-threshold-uv = <3500000>;
			qcom,vph-low-threshold-uv = <3300000>;
			qcom,soc-low-threshold = <10>;
		};
	};
};
